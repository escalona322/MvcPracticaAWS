@model IEnumerable<MvcPracticaAWS.Models.Apuesta>

@{
    ViewData["Title"] = "Apuestas";
}

<h1>Apuestas</h1>

<p>
    <a asp-action="InsertApuesta">NuevaApuesta</a>
</p>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdApuesta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdVisitante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GolesLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GolesVisitante)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdApuesta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdVisitante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GolesLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GolesVisitante)
                    </td>
                    <td>
                    </td>
                </tr>
            }



        </tbody>
    </table>

            }
            else
            {
                <h1>No hay apuestas</h1>
            }
